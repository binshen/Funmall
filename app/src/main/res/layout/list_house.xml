<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="15.0dip"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:paddingBottom="15.0dip" >

    <ImageView
        android:id="@+id/house_pic"
        android:layout_width="119.0dip"
        android:layout_height="91.0dip"
        android:scaleType="fitXY"
        android:contentDescription="@string/desc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="91.0dip"
        android:orientation="vertical"
        android:background="@drawable/border_top_right" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="5.0dip" >

            <TextView
                android:id="@+id/house_xiaoqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textSize="10.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/house_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="10.0sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="3.0dip" >

            <TextView
                android:id="@+id/house_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="9.0sp"
                android:textColor="#ff999999" />

            <TextView
                android:id="@+id/house_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:text=""
                android:textSize="9.0sp"
                android:textColor="#ff999999"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="3.0dip" >

            <TextView
                android:id="@+id/house_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="9.0sp"
                android:textColor="#ff999999"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="5.0dip">

            <TextView
                android:id="@+id/house_extra_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="9.0sp"
                android:textColor="#ffc81e43"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

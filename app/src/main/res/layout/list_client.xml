<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="15dip"
    android:paddingTop="15dip"
    android:paddingRight="15dip" >

    <FrameLayout
        android:layout_width="135.0dip"
        android:layout_height="106.0dip" >

        <ImageView
            android:id="@+id/home_others_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/desc" />

        <RelativeLayout
            android:layout_width="22.5dip"
            android:layout_height="15.0dip"
            android:layout_gravity="top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/home_others_house_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/desc" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="16.0dip"
            android:layout_gravity="bottom"
            android:background="#33000000"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/home_others_house_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fadingEdge="none"
                android:spacing="1dip"
                android:text=""
                android:textSize="9.0sp"
                android:textColor="@color/white"
                android:unselectedAlpha="0.5"
                android:singleLine="true"
                android:ellipsize="end" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="78.0dip"
        android:orientation="vertical"
        android:background="@drawable/border_top_right_bottom" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="5.0dip" >

            <TextView
                android:id="@+id/home_others_house_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textSize="10.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_others_discount_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="10.0sp"
                android:textColor="#ffc81e43"
                android:paddingRight="5.0dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="3"
            android:paddingTop="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="5.0dip" >

            <TextView
                android:id="@+id/home_others_house_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:text=""
                android:textSize="9.0sp"
                android:textColor="#ff999999"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingRight="5.0dip" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fm="http://schemas.android.com/apk/res/com.ksls.funmall"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.ksls.funmall.PortraitActivity">

    <com.ksls.funmall.view.Header
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        fm:left_background="@drawable/header_return"
        fm:right_background="@drawable/header_detail_config" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/button_agency_company_name"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="10.0dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称 : "
                android:textSize="12sp"
                android:paddingLeft="10.0dip" />

            <TextView
                android:id="@+id/text_agency_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingRight="10.0dip" />
        </LinearLayout>

        <!--
        <LinearLayout
            android:id="@+id/button_agency_company_profile"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="10.0dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司简介 : "
                android:textSize="12sp"
                android:paddingLeft="10.0dip" />

            <TextView
                android:id="@+id/text_agency_company_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingRight="10.0dip" />
        </LinearLayout>
        -->

        <LinearLayout
            android:id="@+id/button_agency_company_address"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="10.0dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司地址 : "
                android:textSize="12sp"
                android:paddingLeft="10.0dip" />

            <TextView
                android:id="@+id/text_agency_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingRight="10.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_agency_company_contact"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="10.0dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式 : "
                android:textSize="12sp"
                android:paddingLeft="10.0dip" />

            <TextView
                android:id="@+id/text_agency_company_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingRight="10.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/login_user_barcode"
            android:layout_width="200.0dip"
            android:layout_height="200.0dip"
            android:scaleType="fitXY"
            android:contentDescription="@string/desc" />
    </LinearLayout>

</LinearLayout>
